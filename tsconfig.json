{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@popup/*": ["src/popup/*"],
      "@window/*": ["src/window/*"],
      "@options/*": ["src/options/*"],
      "@background/*": ["src/background/*"],
      "@content/*": ["src/content/*"]
    }
  },
  "include": ["src", "scripts", "tests"],
  "exclude": ["node_modules", "dist"]
}
