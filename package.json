{
  "name": "screen-capture-extension",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "init": "ts-node --esm scripts/init.ts",
    "dev": "vite",
    "build:main": "vite build",
    "build:content": "vite build --config vite.content.config.ts",
    "build": "npm run build:main && npm run build:content && npm run postbuild",
    "zip": "zip -r dist.zip dist/",
    "clean": "rm -rf dist",
    "validate": "node scripts/validate-generated-project.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "postbuild": "cp -r public/. dist/ && cp src/content/content.css dist/content.css"
  },
  "dependencies": {
    "@types/yargs": "^17.0.33",
    "enquirer": "^2.4.1",
    "fabric": "^5.3.0",
    "framer-motion": "^12.19.1",
    "html2canvas": "^1.4.1",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-confetti": "^6.4.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.0.260",
    "@types/fabric": "^5.3.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.4.32",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "vite": "^5.0.0",
    "vite-plugin-copy": "^0.1.6",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint -- --fix",
      "npm run format"
    ]
  }
}
